<?xml version="1.0"?>
<!--For robot-->
<robot name="my_robot">
        <material name="blue">
            <color rgba="0 0 0.8 1"/>
        </material>
        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>
    <!--dummy link-->
    <link name="base_footprint"/>
    <!--Base-->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.33 0.34 0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!--Left wheel-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length= "0.01" radius="0.036"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <!--Right wheel-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length= "0.01" radius="0.036"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>
    <!-- Head marker -->
    <link name="head_marker">
        <visual>
            <geometry>
                <box size="0.03 0.03 0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <!-- Passive wheel holder -->
    <link name="passive_wheel_holder">
        <visual>
            <geometry>
                <box size="0.02 0.02 0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
   <!-- Passive wheel -->
    <link name="passive_wheel">
        <visual>
            <geometry>
                <sphere radius="0.0105"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <!--wheel rotator markers-->
    <link name="lw_marker">
        <visual>
            <geometry>
                <box size="0.03 0.03 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <link name="rw_marker">
        <visual>
            <geometry>
                <box size="0.03 0.03 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>
    <!--JOINTS FROM HERE-->

    <!--For footprint and base-->
    <joint name="footprint_to_base" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.036" rpy="0 0 0"/>
    </joint>
    <!--Left wheel Joint-->
    <joint name="base_to_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.175 0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    <!--Right wheel Joint-->
    <joint name="base_to_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.175 0" rpy="1.5708 0 0"/> 
        <axis xyz="0 0 1"/>
    </joint>

    <!-- Head fixed joint -->
    <joint name="base_to_head" type="fixed">
        <parent link="base_link"/>
        <child link="head_marker"/>
        <origin xyz="0.15 0 0.02" rpy="0 0 0"/>
    </joint>

    <!-- Passive wheel holder joint -->
    <joint name="base_to_passive_holder" type="fixed">
        <parent link="base_link"/>
        <child link="passive_wheel_holder"/>
        <origin xyz="0.15 0 -0.008" rpy="0 0 0"/>
    </joint>

    <!-- Passive wheel to holder -->
    <joint name="holder_to_passive_wheel" type="fixed">
        <parent link="passive_wheel_holder"/>
        <child link="passive_wheel"/>
        <origin xyz="0 0 -0.022" rpy="0 0 0"/>
    </joint>
    <!-- lw marker joint -->
    <joint name="lw_marker_joint" type="fixed">
        <parent link="left_wheel"/>
        <child link="lw_marker"/>
        <origin xyz="0 0 -0.005" rpy="0 0 0"/>
    </joint>

    <!-- rw marker joint -->
    <joint name="rw_marker_joint" type="fixed">
        <parent link="right_wheel"/>
        <child link="rw_marker"/>
        <origin xyz="0 0 0.005" rpy="0 0 0"/>
    </joint>
</robot>
